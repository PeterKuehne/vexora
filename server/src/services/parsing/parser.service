[Unit]
Description=Vexora Document Parser Service
After=network.target

[Service]
Type=simple
User=peter
Group=peter
WorkingDirectory=/opt/vexora/parser
Environment="PATH=/opt/vexora/parser/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/opt/vexora/parser/venv/bin/uvicorn parser_service:app --host 0.0.0.0 --port 8002 --workers 2
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Resource limits
MemoryMax=4G
CPUQuota=200%

[Install]
WantedBy=multi-user.target
