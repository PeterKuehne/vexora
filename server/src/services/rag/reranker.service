[Unit]
Description=Vexora Reranker Service (BGE-reranker-v2-m3)
After=network.target

[Service]
Type=simple
User=peter
WorkingDirectory=/opt/vexora/reranker
Environment="PATH=/opt/vexora/reranker/venv/bin"
Environment="RERANKER_MODEL=BAAI/bge-reranker-v2-m3"
Environment="RERANKER_TOP_K=5"
ExecStart=/opt/vexora/reranker/venv/bin/uvicorn reranker_service:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
